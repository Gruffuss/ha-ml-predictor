[flake8]
# Configuration to match Black formatting (88 character line length)
max-line-length = 140
extend-ignore = E203,W503,E501
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    logs,
    performance_reports,
    *.md,
    *.txt,
    *.json,
    *.yaml,
    *.yml,
    *.dockerfile,
    Dockerfile*,
    docker-compose*
per-file-ignores =
    # Test files can be more lenient
    tests/*:F401,F811,F841
    # Examples and scripts can have unused imports
    examples/*:F401,F841
    scripts/*:F401,F841
max-complexity = 15
docstring-convention = google
# Environment configuration template for Home Assistant ML Predictor
# Copy this file to .env and customize for your environment

# Home Assistant Configuration
HA_URL=http://192.168.51.247:8123
HA_TOKEN=your_home_assistant_long_lived_access_token

# Database Configuration
DATABASE_HOST=timescaledb
DATABASE_PORT=5432
DATABASE_NAME=occupancy_prediction
DATABASE_USER=occupancy_user
DATABASE_PASSWORD=occupancy_pass

# MQTT Configuration
MQTT_BROKER=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Application Configuration
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production

# Optional: Monitoring Configuration
GRAFANA_PASSWORD=admin

# Optional: External Services (if using external MQTT/DB)
# EXTERNAL_MQTT_BROKER=your.mqtt.broker.com
# EXTERNAL_DB_HOST=your.database.host.com

# Performance Tuning
PREDICTION_INTERVAL=300
ACCURACY_THRESHOLD=15
CONFIDENCE_THRESHOLD=0.7

# Feature Engineering
LOOKBACK_HOURS=24
SEQUENCE_LENGTH=50